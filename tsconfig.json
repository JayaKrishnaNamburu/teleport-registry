{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "outDir": "lib/",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "lib", "./__tests__/**/*"]
}
